import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BCM)
GPIO.setup(18, GPIO.OUT)
pwm = GPIO.PWM(18, 100)
pwm.start(5)


def update(angle):
    duty = float(angle) / 10.0 + 2.5
    output = pwm.ChangeDutyCycle(duty)
    print output

def loop():
        update(170)
        time.sleep(1)
        update(20)
        time.sleep(1)

def main():
        i=0
        while i<3:
                loop()
                i+=1
        return 0

if __name__=="__main__":
    main()
